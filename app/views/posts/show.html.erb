<br />

<div>
  <h2><%= @post.rationale %></h2>
</div>

<hr />

<div class="card bg-light mb-3" style="max-width: 100%;">
  <div class="card-body">
    <div>
      <h3 class="card-title"><span>Overtime Amount Requested:</span> <%= @post.overtime_request %></h3>
    </div>

    <div>
      <h3 class="card-title"><span>Employee:</span> <%= @user.full_name %></h3>
    </div>

    <div>
      <h3 class="card-title"><span>Date:</span> <%= @post.date %></h3>
    </div>

    <div>
      <h3 class="card-title"><span>Current Stage of Approval:</span> <%= @post.status %></h3>
    </div>
  </div>
</div>

<%= link_to "Edit", edit_post_path(@post.id), class: "btn btn-primary" if policy(@post).update? %>