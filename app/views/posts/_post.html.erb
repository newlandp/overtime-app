<tr>
  <th scope="row"><%= post.id %></th>
  <td><%= post.overtime_request %></td>
  <td><%= post.date %></td>
  <td><%= post.user.full_name %></td>
  <td><%= link_to truncate(post.rationale), post_path(post.id) %></td>
  <td><%= status_label post.status %></td>
  <td><%= link_to '', edit_post_path(post.id), class: "icon-pencil index-icons", id: "edit_#{post.id}" if policy(post).update? %></td>
  <td><%= link_to '', post_path(post.id), class: "icon-trash index-icons", id: "delete_post_#{post.id}_from_index",
          method: :delete, data: { confirm: "are you sure?" } %></td>
</tr>

