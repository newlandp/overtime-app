<tr>
  <th scope="row"><%= post.id %></th>
  <td><%= post.date %></td>
  <td><%= post.user.full_name %></td>
  <td><%= truncate(post.rationale) %></td>
  <td><%= status_label post.status %></td>
  <td><%= edit_disabled? post %></td>
  <td><%= link_to 'Delete', post_path(post.id), id: "delete_post_#{post.id}_from_index",
          method: :delete, data: { confirm: "are you sure?" } %></td>
</tr>