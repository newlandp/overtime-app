<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :overtime_request %>
    <%= f.number_field :overtime_request, step: 'any', class: "form-control mini-field" %>
  </div>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date, class: "form-control mini-field" %>
  </div>
  <div class="form-group">
    <%= f.label :rationale %>
    <%= f.text_area :rationale, class: "form-control" %>
  </div>
  <%= render partial: 'status', locals: { f: f } if current_user.type == 'AdminUser' %>
  <%= f.submit 'Save', class: "btn btn-primary" %>
<% end %>
