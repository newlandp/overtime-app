<!DOCTYPE html>
<html>
  <head>
    <title>Overtime</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% if flash[:notice] %>
        <%= content_tag(:div, flash[:notice], class: "alert alert-info top-space") %>
      <% end %>
      <% if flash[:alert] %>
        <%= content_tag(:div, flash[:alert], class: "alert alert-info top-space") %>
      <% end %>
      <div class="row">
        <div class="col-md-12">
          <%= render "shared/nav" %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
